<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lingkai5wu.loveta.mapper.UserMapper">

    <resultMap id="userWithRolesVOResultMap" type="com.github.lingkai5wu.loveta.model.vo.UserWithRolesVO"
               autoMapping="true">
        <id property="id" column="id"/>
        <collection property="roles" ofType="string">
            <constructor>
                <arg column="role_name"/>
            </constructor>
        </collection>
    </resultMap>

    <select id="getUserWithRolesVOById" resultMap="userWithRolesVOResultMap" parameterType="long">
        SELECT u.id,
               u.phone,
               u.status,
               u.nickname,
               u.realname,
               u.avatar,
               u.sex,
               u.create_time,
               r.name AS role_name
        FROM auth_user u
                 LEFT JOIN auth_user_role ur ON u.id = ur.user_id
                 LEFT JOIN auth_role r ON ur.role_id = r.id
        WHERE u.id = #{id}
    </select>

    <select id="listUserWithRolesVOs" resultMap="userWithRolesVOResultMap">
        SELECT u.id,
               u.phone,
               u.status,
               u.nickname,
               u.realname,
               u.avatar,
               u.sex,
               u.create_time,
               r.name AS role_name
        FROM auth_user u
                 LEFT JOIN auth_user_role ur ON u.id = ur.user_id
                 LEFT JOIN auth_role r ON ur.role_id = r.id
    </select>
</mapper>
