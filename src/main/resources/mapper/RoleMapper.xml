<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lingkai5wu.loveta.mapper.RoleMapper">

    <select id="listRoleNamesByUserId" resultType="java.lang.String" parameterType="object">
        SELECT r.name
        FROM auth_role r
                 INNER JOIN auth_user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{id}
    </select>
    <select id="listRolesByUserId" resultType="com.github.lingkai5wu.loveta.model.po.Role"
            parameterType="long">
        SELECT r.*
        FROM auth_role r
                 INNER JOIN auth_user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{id}
    </select>
</mapper>
