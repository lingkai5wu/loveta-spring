<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lingkai5wu.loveta.mapper.UserMapper">
    <resultMap id="userResultMap" type="com.github.lingkai5wu.loveta.model.vo.UserVo" autoMapping="true">
        <id property="id" column="id"/>
        <collection property="groupList" ofType="string">
            <constructor>
                <arg column="group_name"/>
            </constructor>
        </collection>
    </resultMap>
    <select id="listUsers" resultMap="userResultMap">
        SELECT u.id,
               u.phone,
               u.status,
               u.nickname,
               u.realname,
               u.avatar,
               u.sex,
               u.create_time,
               g.name AS group_name
        FROM auth_user u
                 LEFT JOIN auth_user_groups ug ON u.id = ug.user_id
                 LEFT JOIN auth_group g ON ug.group_id = g.id
    </select>

</mapper>
