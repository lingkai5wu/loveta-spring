<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lingkai5wu.loveta.mapper.GroupMapper">

    <select id="listRolesByUserId" resultType="java.lang.String" parameterType="object">
        SELECT g.name
        FROM auth_group g
                 INNER JOIN auth_group_user gu ON g.id = gu.group_id
        WHERE gu.user_id = #{id}
    </select>
</mapper>
